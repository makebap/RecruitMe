<% layout('./layouts/boilerplate'); %>
<!-- <div hidden class="spinner d-flex bg-white">
    <div class="fixed m-auto spinner-border" role="status">
    </div>
</div> -->
<div class="display">
<div class="row">
<div class="col-6 offset-lg-3">
<form action="/jobs">
<div class="input-group mb-3">
    <span class="input-group-text" id="search-addon"><button type="submit" class="btn"><i class="fa fa-magnifying-glass"></i></button></span>
    <input type="text" class="form-control" placeholder="Search Jobs..." aria-label="Search" aria-describedby="search-addon" name="q">
</div>
</form>
</div>
</div>
<% for (let i=0; i < jobs.length; i++) { %>
    <div class="row d-flex flex-row justify-content-between">
        <div class="col-md-10 offset-md-1 col-lg-6 offset-lg-0">
        <div class="card mb-5">
            <div id="carouselIndicators<%= i %>" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="<%= jobs[i].images[0].url %>" class="d-block w-100" alt="<%= jobs[i].images[0].fileName %>...">
                    </div>
                    <% for(let j=1; j < jobs[i].images.length; j++){ %>
                        <div class="carousel-item">
                            <img src="<%= jobs[i].images[j].url %>" class="d-block w-100" alt="<%= jobs[i].images[j].fileName %>">
                        </div>
                    <% } %>
                </div>
                <% if(jobs[i].images.length > 1){ %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators<%= i %>" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators<%= i %>" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <% } %>
            </div>
            <div class="card-body">
                <div class="card-title">
                    <h5><%= jobs[i].title %></h5>
                    <h6><%= jobs[i].company %></h6>
                    <p><%= jobs[i].location %></p>
                </div>
                <p><strong>$<%= jobs[i].salary %></strong>/<%= jobs[i].frequency %></p>
                <span class="badge text-bg-secondary rounded-pill"><%= jobs[i].schedule %></span> <span class="badge text-bg-secondary rounded-pill"><%= jobs[i].level %></span>
                <p class="mt-3"><a href="/jobs/<%= jobs[i]._id %>" class="btn btn-primary">View</a></p>
            </div>
        </div>
        </div>
    <% i++; if(i < jobs.length) { %>
        <div class="col-md-10 offset-md-1 col-lg-6 offset-lg-0">
        <div class="card mb-5">
            <div id="carouselIndicators<%= i %>" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="<%= jobs[i].images[0].url %>" class="d-block w-100" alt="<%= jobs[i].images[0].fileName %>...">
                    </div>
                    <% for(let j=1; j < jobs[i].images.length; j++){ %>
                        <div class="carousel-item">
                            <img src="<%= jobs[i].images[j].url %>" class="d-block w-100" alt="<%= jobs[i].images[j].fileName %>">
                        </div>
                    <% } %>
                </div>
                <% if(jobs[i].images.length > 1){ %>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators<%= i %>" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators<%= i %>" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <% } %>
            </div>
            <div class="card-body">
                <div class="card-title">
                    <h5><%= jobs[i].title %></h5>
                    <h6><%= jobs[i].company %></h6>
                    <p><%= jobs[i].location %></p>
                </div>
                <p><strong>$<%= jobs[i].salary %></strong>/<%= jobs[i].frequency %></p>
                <span class="badge text-bg-secondary rounded-pill"><%= jobs[i].schedule %></span> <span class="badge text-bg-secondary rounded-pill"><%= jobs[i].level %></span>
                <p class="mt-3"><a href="/jobs/<%= jobs[i]._id %>" class="btn btn-primary">View</a></p>
            </div>
        </div>
        </div>
    <% } %>
    </div>
<% } %>
</div>